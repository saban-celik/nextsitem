{
  "compilerOptions": {
    "target": "ES6",                    // ES6'yı hedef alır
    "module": "commonjs",               // CommonJS modül sistemi kullanılır
    "strict": true,                     // Sıkı tip denetimi aktif
    "esModuleInterop": true,            // ES modülleriyle uyumlu
    "forceConsistentCasingInFileNames": true, // Dosya isimlerinde tutarlılık sağlanır
    "skipLibCheck": true,               // Kütüphane dosyalarını kontrol etmez
    "outDir": "./dist",                 // Derlenmiş dosyalar dist klasörüne çıkartılır
    "rootDir": "./",                    // Kaynak dosyalar kök dizin
    "sourceMap": true,                  // Kaynak haritaları oluşturulur
    "allowJs": true,                    // JavaScript dosyalarını da derlemeye dahil eder
    "checkJs": false                    // JavaScript dosyalarını tip kontrolünden geçirmez
  },
  "include": [
    "**/*.ts",                          // Tüm .ts dosyalarını dahil et
    "index.js"                          // index.js dosyasını da dahil et
  ],
  "exclude": [
    "node_modules",                     // node_modules klasörü dışlanır
    "dist"                              // dist klasörü dışlanır
  ]
}
